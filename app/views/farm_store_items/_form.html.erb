<%= form_for @farm_store_item, :multipart => true do |f| %>
  <%= error_explanation(@farm_store_item) %>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :name, :class => 'control-label' %>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div><!--col -->

    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :quantity, :class => 'control-label' %>
        <%= f.text_field :quantity, :class => 'form-control', :placeholder => 'total in stock..' %>
      </div>
    </div><!--col -->
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :quantity_label, :class => 'control-label' %>
        <%= f.text_field :quantity_label, :class => 'form-control', :placeholder => 'shirt OR gram OR bouquet OR box of shells..' %>
      </div>
    </div><!--col -->
  </div><!-- row -->

  <div class="row">
    <div class="col-sm-6">
      <%= f.label :description, :class => 'control-label' %>
      <%= f.bootsy_area :description, class: 'form-control' %>
    </div><!-- col -->

    <div class="col-sm-6">
      <!-- pricing -->
      <% @farm_store_item.available_pricings.each do |p| -%>
        <%= render partial: 'farm_store_pricings/form', locals: {:pricing => p} %>
      <% end %>

      <%= render partial: 'farm_store_pricings/form', locals: {:pricing => FarmStorePricing.new} %>
    </div><!-- col -->
  </div><!-- row -->

  <%= image_select(f, :images, :multiple => true) %><!-- row -->
<% end %>
